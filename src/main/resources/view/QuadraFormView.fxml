<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.com.sportcourt.controller.QuadraFormController"
      spacing="12"
      alignment="TOP_CENTER"
      style="-fx-padding:20;">

    <Label text="Cadastro de Quadra" style="-fx-font-size:22px;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtNome" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Tipo:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtTipo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Valor/Hora:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtValorHora" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Status:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <ComboBox fx:id="comboStatus" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="12">
        <Button text="Salvar" onAction="#onSalvar"/>
        <Button text="Cancelar" onAction="#onCancelar"/>
    </HBox>

</VBox>
