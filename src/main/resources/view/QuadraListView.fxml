<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="br.com.sportcourt.controller.QuadraListController"
      spacing="10"
      alignment="CENTER"
      style="-fx-padding: 20;">

    <TableView fx:id="tableQuadras" prefWidth="600">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colNome" text="Nome" prefWidth="150"/>
            <TableColumn fx:id="colTipo" text="Tipo" prefWidth="150"/>
            <TableColumn fx:id="colValor" text="Valor/Hora" prefWidth="120"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="120"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Cadastrar" onAction="#onCadastrar"/>
        <Button text="Editar" onAction="#onEditar"/>
        <Button text="Excluir" onAction="#onExcluir"/>
    </HBox>

</VBox>
