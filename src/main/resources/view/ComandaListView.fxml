<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="br.com.sportcourt.controller.ComandaListController"
      spacing="10"
      alignment="CENTER"
      style="-fx-padding:20;">

    <TableView fx:id="tableComandas" prefWidth="600">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colReserva" text="Reserva" prefWidth="100"/>
            <TableColumn fx:id="colTotal" text="Total" prefWidth="120"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="120"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Nova Comanda" onAction="#onNova"/>
        <Button text="Abrir Itens" onAction="#onAbrirItens"/>
        <Button text="Fechar Comanda" onAction="#onFechar"/>
        <Button text="Excluir" onAction="#onExcluir"/>
    </HBox>

</VBox>
