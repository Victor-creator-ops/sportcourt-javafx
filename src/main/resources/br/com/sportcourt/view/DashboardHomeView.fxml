<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.com.sportcourt.controller.DashboardHomeController"
      spacing="30" alignment="CENTER"
      style="-fx-padding: 40; -fx-background-color: #f8f9fa;">
    
    <!-- Banner de boas-vindas -->
    <VBox spacing="15" alignment="CENTER" 
          style="-fx-background-color: white; -fx-background-radius: 15; 
                 -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 20, 0, 0, 5);"
          maxWidth="800">
        
        <Label text="Bem-vindo ao SportCourt!" 
               style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        
        <Label text="Sistema de Gestão de Quadras Esportivas" 
               style="-fx-font-size: 18px; -fx-text-fill: #7f8c8d;"/>
        
        <Separator style="-fx-background-color: #ecf0f1; -fx-padding: 20 0;"/>
        
        <VBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 0 20;">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Projeto Interdisciplinar do 3° semestre" style="-fx-text-fill: #2c3e50; -fx-font-size: 16px;"/>
            </HBox>
        </VBox>
        
        <Separator style="-fx-background-color: #ecf0f1; -fx-padding: 20 0;"/>
        
        <Label text="Use o menu lateral para navegar entre os módulos" 
               style="-fx-text-fill: #95a5a6; -fx-font-style: italic;"/>
    </VBox>
    
</VBox>