<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.com.sportcourt.controller.ComandaListController"
      spacing="20"
      style="-fx-padding: 30;">
    
    <Label text="ðŸ§¾ Comandas do Bar" 
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    
    <HBox spacing="15" alignment="CENTER_LEFT">
        <TextField fx:id="txtCliente" promptText="Cliente (opcional)" prefWidth="220"
                   style="-fx-background-radius: 8; -fx-padding: 10;"/>
        <TextField fx:id="txtReservaId" promptText="Reserva ID (opcional)" prefWidth="200"
                   style="-fx-background-radius: 8; -fx-padding: 10;"/>
        <Button text="âž• Nova Comanda" onAction="#onNova" 
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;
                       -fx-background-radius: 8; -fx-padding: 10 20;"/>
    </HBox>

    <HBox spacing="15" alignment="CENTER_LEFT">
        
        <Button text="ðŸ“ Abrir Itens" onAction="#onAbrirItens" 
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;
                       -fx-background-radius: 8; -fx-padding: 10 20;"/>
        
        <Button text="âœ… Fechar" onAction="#onFechar" 
                style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold;
                       -fx-background-radius: 8; -fx-padding: 10 20;"/>
        
        <Button text="ðŸ—‘ï¸ Excluir" onAction="#onExcluir" 
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;
                       -fx-background-radius: 8; -fx-padding: 10 20;"/>
        
        <Region HBox.hgrow="ALWAYS"/>
        
        <Button text="ðŸ”„ Atualizar" onAction="#onAtualizar"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;
                       -fx-background-radius: 8; -fx-padding: 10 20;"/>
    </HBox>
    
    <TableView fx:id="tableComandas" style="-fx-background-color: white;">
        <columns>
            <TableColumn fx:id="colId" text="Comanda" prefWidth="120"/>
            <TableColumn fx:id="colReserva" text="Reserva" prefWidth="150"/>
            <TableColumn fx:id="colCliente" text="Cliente" prefWidth="200"/>
            <TableColumn fx:id="colTotal" text="Total (R$)" prefWidth="150"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="150"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
    
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label text="Total de comandas:" style="-fx-font-weight: bold;"/>
        <Label text="0" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;"/>
    </HBox>
    
</VBox>
