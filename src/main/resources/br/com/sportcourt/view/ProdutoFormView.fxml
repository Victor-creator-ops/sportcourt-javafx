<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="br.com.sportcourt.controller.ProdutoFormController"
      spacing="12"
      alignment="TOP_CENTER"
      style="-fx-padding:20;">

    <Label text="Produto do Bar" style="-fx-font-size:22px;"/>

    <GridPane hgap="10" vgap="10">

        <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtNome" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="PreÃ§o:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="txtPreco" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Categoria:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="txtCategoria" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Ativo:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ComboBox fx:id="comboAtivo" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    </GridPane>

    <HBox spacing="12">
        <Button text="Salvar" onAction="#onSalvar"/>
        <Button text="Cancelar" onAction="#onCancelar"/>
    </HBox>

</VBox>
